{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "strict": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@/data-manager/*": [
        "./src/libs/data-manager/*"
      ],
      "@/data-manager": [
        "./src/libs/data-manager/index.ts"
      ]
    }
  },
  "include": ["**/*.ts", "index.js", ".log/**/*.ts"],
  "exclude": ["node_modules/"]
}